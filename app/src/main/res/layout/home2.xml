<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="카테고리"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.widget.Button
                    android:id="@+id/hairs"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_pressed"
                    android:backgroundTint="#FFE1D7"
                    android:color="@color/homeButton"
                    android:drawableTop="@drawable/make_up"
                    android:paddingTop="8dp"
                    android:scaleType="fitCenter" />

                <android.widget.Button
                    android:id="@+id/studios"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_pressed"
                    android:backgroundTint="#FFE1D7"
                    android:drawableTop="@drawable/studio"
                    android:paddingTop="8dp"
                    android:scaleType="fitCenter" />

                <android.widget.Button
                    android:id="@+id/models"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_pressed"
                    android:backgroundTint="#FFE1D7"
                    android:drawableTop="@drawable/model"
                    android:paddingTop="8dp"
                    android:scaleType="fitCenter" />

                <android.widget.Button
                    android:id="@+id/cameraman"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_pressed"
                    android:backgroundTint="#FFE1D7"
                    android:drawableTop="@drawable/camera"
                    android:paddingTop="8dp"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="42dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:text="헤어/메이크업" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:text="스튜디오" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:text="모델" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:text="사진작가" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="393dp"
                android:layout_height="103dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@drawable/g_banner">

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="201dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="오늘 단 하루!\n특가 할인스튜디오는 어디?"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <android.widget.Button
                    android:id="@+id/goMap"
                    android:layout_width="125dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_back"
                    android:backgroundTint="#FFE1D7"
                    android:text="지도 보러가기"
                    android:textColor="#0A0A0A"
                    app:cornerRadius="20dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="오늘의 추천"
                android:textColor="#0D0D0D"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.widget.Button
                    android:id="@+id/button_1"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_back"
                    android:text="헤어/메이크업"
                    android:textColor="#0B0B0B"
                    android:textSize="12sp"
                    app:cornerRadius="50dp" />

                <android.widget.Button
                    android:id="@+id/button_2"
                    android:layout_width="62dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_back"
                    android:backgroundTint="#FFE1D7"
                    android:text="스튜디오"
                    android:textColor="#070707"
                    android:textSize="12sp"
                    app:cornerRadius="50dp" />

                <android.widget.Button
                    android:id="@+id/button_3"
                    android:layout_width="32dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_back"
                    android:backgroundTint="#FFE1D7"
                    android:text="모델"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    app:cornerRadius="50dp" />

                <android.widget.Button
                    android:id="@+id/button_4"
                    android:layout_width="62dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_back"
                    android:backgroundTint="#FFE1D7"
                    android:text="사진작가"
                    android:textColor="#070707"
                    android:textSize="12sp"
                    app:cornerRadius="50dp" />
            </LinearLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager_ImageSlider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="100dp"
                android:paddingEnd="100dp"
                android:layout_marginTop="20dp">
            </androidx.viewpager2.widget.ViewPager2>


            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="추천 작가 클래스"
                android:textColor="#0D0D0D"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/ListLayout"
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:layout_marginBottom ="40dp"
                android:layout_marginLeft="16dp"
                >

                <LinearLayout
                    android:layout_width="377dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/class_background"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    >


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView33"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:background="#FFFFFF"
                                android:backgroundTint="#C96746"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Promotion"
                                android:textColor="#FFFFFF" />

                            <TextView
                                android:id="@+id/profile_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="3dp"
                                android:text="추상연 작가님\n클래스 오픈!"
                                android:textColor="#040404"
                                android:textSize="18sp"
                                android:transitionName="nameTransition" />

                            <TextView
                                android:id="@+id/profile_desc"
                                android:layout_width="225dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="3dp"
                                android:text="레전드의 사진 실력이 궁금하다면?\n픽킷에서만 만날수 있는 단독 클래스"
                                android:transitionName="descTransition" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/profile_image"
                            android:layout_width="wrap_content"
                            android:layout_height="150dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="10dp"
                            android:transitionName="imageTransition"
                            app:srcCompat="@drawable/special_writers" />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        android:fitsSystemWindows="true"/>

</androidx.drawerlayout.widget.DrawerLayout>